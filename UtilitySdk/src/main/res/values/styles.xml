<resources>

    <!--    style for bold title-->
    <style name="titleTextStyle" parent="ThemeOverlay.AppCompat.Light">
        <item name="android:layout_height">@dimen/common_button_height</item>
        <!--        <item name="android:fontFamily">@font/nunito_sans_semi_bold_600</item>-->
        <!--        <item name="fontFamily">@font/nunito_sans_semi_bold_600</item>-->
        <item name="android:textColor">@color/black</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">@dimen/title_text_size</item>
        <!--        <item name="android:colorButtonNormal">@color/colorPrimary</item>-->
        <!--        <item name="android:colorAccent">@color/yellow</item>-->
    </style>

    <!--    style for common round on button edges-->
    <style name="ButtonStyle" parent="ThemeOverlay.AppCompat.Light">
        <item name="android:layout_height">@dimen/common_button_height</item>
        <item name="android:background">@drawable/selector_btn_red</item>
        <!--        <item name="android:fontFamily">@font/nunito_sans_semi_bold_600</item>-->
        <!--        <item name="fontFamily">@font/nunito_sans_semi_bold_600</item>-->
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/common_button_text_size</item>
        <item name="android:letterSpacing">0</item>
        <item name="android:includeFontPadding">false</item>
        <!--        <item name="android:colorButtonNormal">@color/colorPrimary</item>-->
        <!--        <item name="android:colorAccent">@color/yellow</item>-->
    </style>


    <!--    style for parameter value-->
    <style name="textParameterValueStyle" parent="ThemeOverlay.AppCompat.Light">
        <item name="android:layout_height">@dimen/common_button_height</item>
        <!--        <item name="android:fontFamily">@font/nunito_sans_semi_bold_600</item>-->
        <!--        <item name="fontFamily">@font/nunito_sans_semi_bold_600</item>-->
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/common_text_size</item>
    </style>

    <!--    style for parameter key-->
    <style name="textParameterKeyStyle" parent="ThemeOverlay.AppCompat.Light">
        <item name="android:layout_height">@dimen/common_button_height</item>
        <!--        <item name="android:fontFamily">@font/nunito_sans_semi_bold_600</item>-->
        <!--        <item name="fontFamily">@font/nunito_sans_semi_bold_600</item>-->
        <item name="android:textColor">@color/dark_gray_text</item>
        <item name="android:textSize">@dimen/small_text_size</item>
    </style>



</resources>